{
  "name": "univ-conv",
  "version": "0.6.8",
  "description": "The universal binary and text converter",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "converter",
    "blob",
    "arraybuffer",
    "base64",
    "binarystring",
    "uint8array",
    "readable",
    "readablestream",
    "utf8"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "compile": "tsc",
    "build": "npm-run-all clean compile",
    "npm-version": "npm version patch",
    "npm-publish": "npm publish",
    "release": "npm-run-all clean compile npm-version npm-publish",
    "test": "jest --runInBand",
    "web-clean": "rimraf ./dist",
    "web-compile": "webpack",
    "web-build": "npm-run-all web-clean web-compile",
    "web-compile-test": "webpack --config webpack.config.test.js",
    "web-build-test": "npm-run-all web-clean web-compile-test",
    "karma": "karma start",
    "web-test": "npm-run-all web-build-test karma"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/__tests__/**/*.spec.+(ts|tsx|js)"
    ],
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@types/encoding-japanese": "^1.0.18",
    "@types/fast-text-encoding": "^1.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "encoding-japanese": "^1.0.30",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "expect": "^27.5.1",
    "jasmine": "^4.0.2",
    "jest": "^27.5.1",
    "karma": "^6.3.17",
    "karma-chrome-launcher": "^3.1.1",
    "karma-jasmine": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "base64-arraybuffer": "^1.0.2",
    "fast-text-encoding": "^1.0.3",
    "tslib": "^2.3.1"
  },
  "author": "Yoshihiro Seki",
  "license": "MIT"
}
