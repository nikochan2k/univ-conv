{
  "name": "univ-conv",
  "version": "0.1.8",
  "description": "Universal binary and text converter",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "converter",
    "blob",
    "arraybuffer",
    "base64",
    "binarystring",
    "uint8array",
    "readable",
    "readablestream",
    "utf8"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "compile": "tsc",
    "build": "npm-run-all clean compile",
    "npm-version": "npm version patch",
    "npm-publish": "npm publish",
    "release": "npm-run-all clean compile npm-version npm-publish",
    "test": "jest --runInBand",
    "web-clean": "rimraf ./dist",
    "web-compile": "webpack",
    "web-build": "npm-run-all web-clean web-compile",
    "web-compile-test": "webpack --config webpack.config.test.js",
    "web-build-test": "npm-run-all web-clean web-compile-test",
    "karma": "karma start",
    "web-test": "npm-run-all web-build-test karma"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/__tests__/**/*.spec.+(ts|tsx|js)"
    ],
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@types/fast-text-encoding": "^1.0.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "expect": "^27.3.1",
    "jasmine": "^3.10.0",
    "jest": "^27.3.1",
    "karma": "^6.3.5",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "base64-arraybuffer": "^1.0.1",
    "fast-text-encoding": "^1.0.3",
    "tslib": "^2.3.1"
  },
  "author": "Yoshihiro Seki",
  "license": "MIT"
}
